				regulator-max-microvolt = <1800000>;
				regulator-boot-on;
				regulator-always-on;
			};

			soc_dvdd12_scan_reg: soc_dvdd12_scan {
				regulator-name = "soc_dvdd12_scan";
				regulator-min-microvolt = <900000>;
				regulator-max-microvolt = <3600000>;
			};

			soc_avdd28_scan_en_reg: soc_avdd28_scan_en {
